@model ClienteViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <form asp-controller="Clientes" asp-action="EditarCliente" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite um Nome" maxlength="150" required>
            @Html.ValidationMessageFor(x => x.Nome)

            <br />
            <label for="dataNascimento" class="form-label">Data de Nascimento</label>
            <input type="date" asp-for="DataNascimento" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" required />
            <div asp-validation-summary="All" class="text-danger"></div>

            <br />
            <label for="rendaFamiliar" class="form-label">Renda Familiar</label>
            <input type="number" asp-for="RendaFamilia" class="form-control" placeholder="Opcional" min="0" />
        </div>

        <button type="submit" class="btn btn-primary">Atualizar Cliente</button>
        <a class="btn btn-secondary" asp-controller="Clientes" asp-action="Index" role="button">Voltar</a>
    </form>
</div>